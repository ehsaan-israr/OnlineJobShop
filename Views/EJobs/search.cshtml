@model IEnumerable<AgainLastWebRTC.Models.jobsJ>
@{
    ViewBag.Title = "search";
    Layout = "~/Views/Shared/_LayoutJobss.cshtml";
}

<div class="space20"></div>
<div class="page-head">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h3>JOBS</h3>
			</div>
			
		</div>
	</div>
</div>
<div class="space20"></div>
<div class="container">
    @using (Html.BeginForm("search", "EJobs", FormMethod.Get))
    {
        <div style="float:left" >
            @Html.Label("Qulification")
            @Html.TextBox("qulification","Qulification")
            
           
        </div>
        
       
        <div style="float:left">
           @Html.Label("Experience")
            @Html.TextBox("experience","Experience")
        </div>
        
        <div style="float:left">
            @Html.Label("Title")
            @Html.TextBox("title","Title")
        </div>
        
        <div><input type="submit" value="Search"/></div>
        
        
    }


</div>

<div class="space20"></div>
@foreach (var j in Model)
{
    <section class="container" style=" background-color:white;padding-bottom:2%;padding-top:2%;border-top-left-radius:50px;border-top-right-radius:50px;border-bottom-left-radius:50px;border-bottom-right-radius:50px;">
    <div class="container">
        <div class="caontainer" style="text-align:center;color:red;font-weight:bolder;"  >@j.title</div>
        <div style="float:left">@j.experience</div>
        <div style="float:left"> | </div>
        <div >@j.qualification</div>
       <div style="float:right">@j.description</div>
        <div style="float:right"> | </div>
        <div style="float:right;color:goldenrod" >@j.lastdate</div>
        <div style="float:right"> | </div>
         <div style="float:right">@j.salary</div>
        
    </div>
</section> 
    <div class="space10" ></div>

}


<div class="space50"></div>

