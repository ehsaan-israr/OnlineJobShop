            <a href="/Jobs/DeleteNew">Delete JobSeekers</a>*@
        </p>

        <table>
            <tr>
                <th class="td1">
                    @Html.DisplayName("First Name")
                </th>
                <th class="td1">
                    @Html.DisplayName("Last date")
                </th>
                <th class="td1">
                    @Html.DisplayName("Title")
